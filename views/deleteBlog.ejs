<%- include("partials/header.ejs") %>

<section id="deleteBlog">
  <div class="container">
    <h1>Delete Posts</h1>
    <div class="main-container">
      <% name.forEach(element => { %>
      <div class="content-container">
        <form action="/deleteBlog" method="post">
          <input
            type="hidden"
            value="<%- name.indexOf(element) %>"
            name="index"
          />
          <h2><%= element %> <input type="submit" value="Delete" /></h2>
          <p><%= content %></p>
        </form>
      </div>
      <% }); %>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>
